  },
  "kind" : "article",
  "metadata" : {
    "modules" : [
      {
        "name" : "Swift Package Manager"
      }
    ],
    "role" : "article",
    "roleHeading" : "Article",
    "title" : "Using build configurations"
  },
  "primaryContentSections" : [
    {
      "content" : [
        {
          "anchor" : "Overview",
          "level" : 2,
          "text" : "Overview",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "text" : "Package manager supports two general build configurations: Debug (default) and Release.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "anchor" : "Debug",
          "level" : 3,
          "text" : "Debug",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "text" : "By default, running ",
              "type" : "text"
            },
            {
              "code" : "swift build",
              "type" : "codeVoice"
            },
            {
              "text" : " builds the package using its debug configuration.",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "Alternatively, you can use ",
              "type" : "text"
            },
            {
              "code" : "swift build -c debug",
              "type" : "codeVoice"
            },
            {
              "text" : ".",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "Package manager locates the build artifacts in a directory called ",
              "type" : "text"
            },
            {
              "code" : "debug",
              "type" : "codeVoice"
            },
            {
              "text" : " under the ",
              "type" : "text"
            },
            {
              "code" : ".build",
              "type" : "codeVoice"
            },
            {
              "text" : " folder.",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "When building in the debug configuration, a Swift target uses the following Swift compiler flags:",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "items" : [
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "code" : "-Onone",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : ": Compile without any optimization.",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "code" : "-g",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : ": Generate debug information.",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "code" : "-enable-testing",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : ": Enable the Swift compiler’s testability feature.",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            }
          ],
          "type" : "unorderedList"
        },
        {
          "inlineContent" : [
            {
              "text" : "A C language target in the debug configuration uses the following flags:",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "items" : [
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "code" : "-O0",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : ": Compile without any optimization.",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "code" : "-g",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : ": Generate debug information.",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            }
          ],
          "type" : "unorderedList"
        },
        {
          "anchor" : "Release",
          "level" : 3,
          "text" : "Release",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "text" : "To build in release mode, type ",
              "type" : "text"
            },
            {
              "code" : "swift build -c release",
              "type" : "codeVoice"
            },
            {
              "text" : ".",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "Package manager locates the build artifacts in a directory called ",
              "type" : "text"
            },
            {
              "code" : "release",
              "type" : "codeVoice"
            },
            {
              "text" : " under the ",
              "type" : "text"
            },
            {
              "code" : ".build",
              "type" : "codeVoice"
            },
            {
              "text" : " folder.",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "When building in the release configuration, a Swift target uses the following Swift compiler flags:",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "items" : [
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "code" : "-O",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : ": Compile with optimizations.",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "code" : "-whole-module-optimization",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : ": Optimize input files (per module) together",
                      "type" : "text"
                    },
                    {
                      "text" : " ",
                      "type" : "text"
                    },
                    {
                      "text" : "instead of individually.",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            }
          ],
          "type" : "unorderedList"
        },
        {
          "inlineContent" : [
            {
              "text" : "A C language target in the release configuration uses the following flags:",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "items" : [
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "code" : "-O2",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : ": Compile with optimizations.",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            }
          ],
          "type" : "unorderedList"
        },
        {
          "anchor" : "Additional-Flags",
          "level" : 3,
          "text" : "Additional Flags",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "text" : "You can pass additional flags to the C, C++, or Swift compilers in three different ways:",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "items" : [
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "Command-line flags passed to these tools: flags like ",
                      "type" : "text"
                    },
                    {
                      "code" : "-Xcc",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : " (for the C compiler) or ",
                      "type" : "text"
                    },
                    {
                      "code" : "-Xswiftc",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : " (for the Swift compiler) pass relevant flags for all targets in the manifest.",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "Target-specific flags in the manifest: use options like ",
                      "type" : "text"
                    },
                    {
                      "code" : "cSettings",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : " or ",
                      "type" : "text"
                    },
                    {
                      "code" : "swiftSettings",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : " for fine-grained control of compilation flags for particular targets.",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            },
            {
              "content" : [
                {
                  "inlineContent" : [
                    {
                      "text" : "A destination JSON file: once you have a set of working command-line flags to apply to all targets, collect them in a JSON file and pass them in through ",
                      "type" : "text"
                    },
                    {
                      "code" : "extra-cc-flags",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : " and ",
                      "type" : "text"
                    },
                    {
                      "code" : "extra-swiftc-flags",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : " with ",
                      "type" : "text"
                    },
                    {
                      "code" : "--destination example.json",
                      "type" : "codeVoice"
                    },
                    {
                      "text" : ".",
                      "type" : "text"
                    }
                  ],
                  "type" : "paragraph"
                }
              ]
            }
          ],
          "type" : "unorderedList"
        },
        {
          "inlineContent" : [
            {
              "text" : "One difference is that C flags passed on the ",
              "type" : "text"
            },
            {
              "code" : "-Xcc",
              "type" : "codeVoice"
            },
            {
              "text" : " command-line or using a manifest’s ",
              "type" : "text"
            },
            {
              "code" : "cSettings",
              "type" : "codeVoice"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "are supplied to the Swift compiler tool for convenience, but ",
              "type" : "text"
            },
            {
              "code" : "extra-cc-flags",
              "type" : "codeVoice"
            },
            {
              "text" : " aren’t.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        }
      ],
      "kind" : "content"
    }
  ],
